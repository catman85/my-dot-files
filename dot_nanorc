# Docs
# https://www.nano-editor.org/dist/latest/nanorc.5.html
bind ^A "{anchor}{firstline}{mark}{lastline}" all
# ctrl + backspace
bind ^H chopwordleft all
# https://stackoverflow.com/questions/73615710/hidden-copy-paste-key-bindings-in-nano
bind ^c "{execute}| xsel -ib {enter}{undo}" main
bind ^v "{execute}| xsel -ob {enter}" main
bind ^x "{execute}| xsel -ib {enter}" main
# bind M-c copy all
# bind M-v paste all
# bind M-x cut all
bind ^z undo all
bind ^y redo all
bind ^l lastline all
bind ^f whereis all
bind ^s savefile all
bind ^n findnext all
bind ^p findprevious all
bind ^e execute all
bind ^r replace all
bind ^q exit all
bind ^b browser writeout
bind ^w writeout all
set titlecolor bold,italic,green,black
set functioncolor bold,italic,green
set keycolor bold,italic,yellow
set numbercolor bold,italic,yellow,black
set scrollercolor bold,italic,green,black
set statuscolor bold,italic,red
set stripecolor bold,italic,purple,black
set afterends
set wordbounds
set atblanks
set softwrap
set autoindent
set indicator
set mouse
set zap
set linenumbers

